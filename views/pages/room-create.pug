extends ../layouts/default.pug

block main
  main.main
    h1.box-title Thêm phòng
    .section-8
      form(id="room-create-form")
        //- BỎ ô input room_id, hệ thống tự sinh

        .inner-group 
          label.inner-label(for="room_name") Tên phòng
          input(
            type="text" 
            id="room_name" 
            name="room_name" 
            placeholder="Nhập tên phòng"
          )

        .inner-group 
          label.inner-label(for="room_type_id") Loại phòng
          select(
            id="room_type_id" 
            name="room_type_id"
          )
            if roomTypesList
              each type in roomTypesList
                option(value=type.room_type_id) #{type.type_name}
            else 
               option(value="" disabled) Không có dữ liệu

        .inner-group.inner-note 
          label.inner-label(for="note") Ghi chú
          textarea(id="note" name="note" placeholder="Nhập ghi chú cho phòng")

        .inner-button.inner-two-col
          button(type="submit") Lưu

      .inner-back 
        a(href="/room") Quay lại danh sách