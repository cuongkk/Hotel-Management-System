extends ../layouts/default.pug

block main
  main.main
    h1.box-title Thêm phòng

    .section-8
      form(
        action="/room/create"
        method="POST"
        id="room-create-form"
        enctype="multipart/form-data"
      )
        //- Số phòng
        .inner-group
          label.inner-label(for="room_id") Số phòng
          input(type="text" id="room_id" name="room_id" required)

        //- Loại phòng
        .inner-group
          label.inner-label(for="room_type_id") Loại phòng
          select(id="room_type_id" name="room_type_id" required)
            option(value="") Chọn loại phòng
            option(value="1") Loại A
            option(value="2") Loại B
            option(value="3") Loại C

        //- Số khách tối đa
        .inner-group
          label.inner-label(for="max_guests") Số khách tối đa
          input(
            type="number"
            id="max_guests"
            name="max_guests"
            min="1"
            value="3"
            required
          )

        .inner-group
          label.inner-label(for="room_images") Ảnh phòng
          input(
            type="file"
            id="room_images"
            name="room_images"
            accept="image/*"
            multiple
          )
		
        //- Ghi chú
        .inner-group.full-width
          label.inner-label(for="note") Ghi chú
          textarea(id="note" name="note")

        .inner-button
          button(type="submit") Lưu

      .inner-back
        a(href="/rooms") Quay lại danh sách
