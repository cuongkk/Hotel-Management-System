extends ../layouts/default.pug
include ../mixins/checkbox-30.pug

block main
  main.main
    h1.box-title Cài đặt quy định giá

    .section-8
      // ===== PHỤ THU =====
      h2.section-title Phụ thu

      .inner-group
        label.inner-label Khách nước ngoài
        input(
          type="text"
          value="Nhân 1.5 lần giá phòng"
          readonly
        )

      .inner-group
        label.inner-label Khách thứ 3
        input(
          type="text"
          value="Phụ thu thêm 25%"
          readonly
        )

      // ===== QUY ĐỊNH SỐ KHÁCH =====
      h2.section-title Quy định số khách

      .inner-group
        label.inner-label Số khách tối đa / phòng
        input(
          type="text"
          value="Tối đa 3 khách"
          readonly
        )

      // ===== GIÁ PHÒNG THEO LOẠI =====
      h2.section-title Giá phòng theo loại

      .inner-group.inner-two-col(
        style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;"
      )
        label.inner-label Loại phòng
        label.inner-label Đơn giá (VND)
        label.inner-label Ghi chú

        // ===== LOẠI A =====
        .inner-group
          input(type="text" value="Loại A" readonly)

        .inner-group
          input(type="text" value="150.000" readonly)

        .inner-group
          input(type="text" value="Phòng tiêu chuẩn" readonly)

        // ===== LOẠI B =====
        .inner-group
          input(type="text" value="Loại B" readonly)

        .inner-group
          input(type="text" value="170.000" readonly)

        .inner-group
          input(type="text" value="Phòng nâng cao" readonly)

        // ===== LOẠI C =====
        .inner-group
          input(type="text" value="Loại C" readonly)

        .inner-group
          input(type="text" value="200.000" readonly)

        .inner-group
          input(type="text" value="Phòng cao cấp" readonly)

    .inner-back
      a(href="/") Quay lại danh sách
