	script.
		const reportsData = !{reportsJson};
		console.log("reportsData ở frontend:", reportsData);

	script(src="/assets/js/script.js")
	script(src="https://cdn.jsdelivr.net/npm/chart.js")
	script(src="/assets/js/chart.js")

