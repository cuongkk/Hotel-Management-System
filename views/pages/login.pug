extends ../layouts/account.pug
include ../mixins/checkbox-30.pug

block main
  .form-account
    h1.inner-title Đăng nhập
    .inner-desc Vui lòng nhập email và mật khẩu để tiếp tục
    form(action="" class="inner-form" id="login-form")
      .inner-group
        label(for="username") Username * 
        input(
          type="text" 
          id="username" 
          name="username" 
          placeholder="Ví dụ: levanam"
          class="inner-control")
      .inner-group
        label(for="password") Mật khẩu *
        input(
          type="password"
          id="password"
          name="password"
          class="inner-control")
      .inner-meta 
        .inner-confirm 
          +checkbox-30("remember", "remember")
          label(
            for="remember"
						name="remember"
          ) Nhớ mật khẩu
        a(href=`/account/forgot-password` class="inner-link") Quên mật khẩu?
      button.inner-button Đăng nhập